<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<display-name>TIW_project3_RIA</display-name>
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/progetto_tiw?serverTimezone=UTC</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>Mammakika01$</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter> 
    	<filter-name>LoginFilter</filter-name>
    	<filter-class>it.polimi.tiw.filters.LoginFilter</filter-class> 
	</filter>
	<filter> 
		<filter-name>AddingDateFilter</filter-name>
    	<filter-class>it.polimi.tiw.filters.AddingDateFilter</filter-class> 
	</filter>
	<filter-mapping> 
    	<filter-name>LoginFilter</filter-name> 
		<url-pattern>/GetDirectoryTree</url-pattern> 
	    <url-pattern>/GetSubdirectory</url-pattern> 
	    <url-pattern>/Logout</url-pattern> 
	    <url-pattern>/MoveDocument</url-pattern>
	    <url-pattern>/CreateDirectory</url-pattern> 
	    <url-pattern>/CreateSubdirectory</url-pattern> 
	    <url-pattern>/CreateDocument</url-pattern>
	    <url-pattern>/DeleteDocument</url-pattern>
	    <url-pattern>/DeleteDirectory</url-pattern>
	    <url-pattern>/home.html</url-pattern>   
	</filter-mapping>
	<filter-mapping> 
    	<filter-name>AddingDateFilter</filter-name>  
	    <url-pattern>/CreateDirectory</url-pattern> 
	    <url-pattern>/CreateSubdirectory</url-pattern> 
	    <url-pattern>/CreateDocument</url-pattern> 
	</filter-mapping>
</web-app>